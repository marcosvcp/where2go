<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context="activity.EventListActivity" >

    <View
        android:id="@+id/statusBarBackground"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <EditText
        android:id="@+id/et_event_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/status_bar_sec_level"
        android:ems="10"
        android:hint="@string/event_name"
        android:inputType="textCapWords"
        android:maxLength="20"
        android:paddingBottom="5dp"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textColorHint="#AAAAAA"
        android:textStyle="bold"
        android:textCursorDrawable="@drawable/cursor" />

    <EditText
        android:id="@+id/et_event_description"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edit_text"
        android:ems="10"
        android:hint="@string/event_description"
        android:inputType="textMultiLine|textCapSentences"
        android:paddingBottom="5dp"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textColor="#777777"
        android:textCursorDrawable="@drawable/cursor" />


    <EditText
        android:id="@+id/et_event_initial_date"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edit_text"
        android:ems="10"
        android:focusable="false"
        android:hint="@string/event_initial_date"
        android:inputType="date"
        android:maxLength="10"
        android:paddingBottom="5dp"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textColor="#777777"
        android:textCursorDrawable="@drawable/cursor" />

    <EditText
        android:id="@+id/et_event_final_date"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edit_text"
        android:ems="10"
        android:focusable="false"
        android:hint="@string/event_final_date"
        android:inputType="date"
        android:maxLength="10"
        android:paddingBottom="5dp"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textColor="#777777"
        android:textCursorDrawable="@drawable/cursor" />

    <Button
        android:id="@+id/bt_select_tags"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:maxLength="10"
        android:paddingBottom="5dp"
        android:paddingLeft="3dp"
        android:paddingTop="5dp"
        android:text="@string/event_tags"
        android:textColor="@color/status_bar" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radio_spreadcost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Public Event"
            android:textColor="#FFFFFF"
            android:textSize="11dp" />

        <RadioButton
            android:id="@+id/radio_repeat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Private Event"
            android:textSize="11dp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_add_aditional_informations"
            android:layout_width="190dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_weight="0.5"
            android:background="#444444"
            android:text="More Info"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bt_create_event"
            android:layout_width="190dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_weight="0.5"
            android:background="@color/status_bar"
            android:text="@string/create_event"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>