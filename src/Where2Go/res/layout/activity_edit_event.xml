<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="activity.EventListActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Event Name"
            android:singleLine="true" />

        <EditText
            android:id="@+id/et_event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Event Description"
            android:singleLine="true" />

        <EditText
            android:id="@+id/et_event_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Event Info"
            android:singleLine="true" />

        <EditText
            android:id="@+id/et_event_initial_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Event Initial Date"
            android:singleLine="true" />

        <EditText
            android:id="@+id/et_event_final_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Event Final Date"
            android:singleLine="true" />

        <Button
            android:id="@+id/bt_edit_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Event" />
    </LinearLayout>

</LinearLayout>