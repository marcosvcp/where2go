<project>
    <taskdef name="findbugs" classname="edu.umd.cs.findbugs.anttask.FindBugsTask"/>

    <target name="findbugs">
        <mkdir dir="reports" />
        <findbugs home="/data/findbugs" output="xml" outputFile="reports/findbugs.xml" excludeFilter="findbugs-exclude.xml">
            <auxClasspath path="${android.jar}" />
            <class location="${out.dir}" />
        </findbugs>
    </target>

	<taskdef resource="checkstyletask.properties" classpath="/opt/checkstyle-6.0/checkstyle-6.0-all.jar"/>

    <target name="checkstyle">
        <checkstyle config="/data/checkstyle/sun_checks.xml" failonviolation="false">
            <fileset dir="."> 
            <include name="**/*.java"/>
            <exclude name="**/test/*.java"/>
            </fileset>
            <formatter type="xml" />
            <formatter type="xml" toFile="checkstyle-result.xml" />
        </checkstyle>
    </target>

</project>